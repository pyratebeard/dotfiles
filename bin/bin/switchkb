#!/usr/bin/zsh

if [ "$1" = "" ] ; then
	echo "which language, gb or us?"
	exit 0
else
	lang=$1
fi

kill $(pidof xcape)
setxkbmap -option
if [[ "$lang" == "colemak" ]] ; then
	setxkbmap -option ctrl:nocaps colemak-ctrl
else
	setxkbmap -option ctrl:nocaps $lang
fi
xcape -e 'Control_L=Escape'

echo "keyboard is switched to $lang"
