#!/usr/bin/zsh

ipCmd=$(dig +short myip.opendns.com @resolver1.opendns.com)
ipFile="$HOME/tmp/current_ip"
pager="https://pager.pyratebeard.net/vpn"

if [ ! -f $ipFile ] ; then
	echo "$ipCmd" > $ipFile
fi

if [[ $ipCmd != $(cat $ipFile) ]] && [[ $ipCmd != "" ]] ; then
	curl -d "ip changed to ${ipCmd}" ${pager}
	echo "$ipCmd" > $ipFile
fi
echo "$ipCmd"
