#!/bin/sh

c00=$'\e[0;30m'
c01=$'\e[0;31m'
c02=$'\e[0;32m'
c03=$'\e[0;33m'
c04=$'\e[0;34m'
c05=$'\e[0;35m'
c06=$'\e[0;36m'
c07=$'\e[0;37m'
c08=$'\e[1;30m'
c09=$'\e[1;31m'
c10=$'\e[1;32m'
c11=$'\e[1;33m'
c12=$'\e[1;34m'
c13=$'\e[1;35m'
c14=$'\e[1;36m'
c15=$'\e[1;37m'

f0=$'\e[1;30m'
f1=$'\e[1;37m'
f2=$'\e[0;37m'

hexs=( $(xrdb -query | grep -P '^.*color[0-9]*:' | tr -d '\t' | cut -d: -f2) )

cat << EOF
${c00} ░░▓▓██ ${hexs[0]}
${c08} ░░▓▓██ ${hexs[1]}
${c01} ░░▓▓██ ${hexs[2]}
${c09} ░░▓▓██ ${hexs[3]}
${c02} ░░▓▓██ ${hexs[4]}
${c10} ░░▓▓██ ${hexs[5]}
${c03} ░░▓▓██ ${hexs[6]}
${c11} ░░▓▓██ ${hexs[7]}
${c04} ░░▓▓██ ${hexs[8]}
${c12} ░░▓▓██ ${hexs[9]}
${c05} ░░▓▓██ ${hexs[10]}
${c13} ░░▓▓██ ${hexs[11]}
${c06} ░░▓▓██ ${hexs[12]}
${c14} ░░▓▓██ ${hexs[13]}
${c07} ░░▓▓██ ${hexs[14]}
${c15} ░░▓▓██ ${hexs[15]}
EOF
