#!/usr/bin/env bash
#          â–ˆâ–ˆ              â–ˆâ–ˆ  â–ˆâ–ˆ
#         â–‘â–ˆâ–ˆ             â–‘â–ˆâ–ˆ â–‘â–ˆâ–ˆ  â–ˆâ–ˆ   â–ˆâ–ˆ
#   â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–‘â–ˆâ–ˆ  â–ˆâ–ˆ â–ˆâ–ˆ   â–ˆâ–ˆ â–‘â–ˆâ–ˆ â–‘â–ˆâ–ˆ â–‘â–‘â–ˆâ–ˆ â–ˆâ–ˆ
#  â–ˆâ–ˆâ–‘â–‘â–‘â–‘ â–‘â–ˆâ–ˆ â–ˆâ–ˆ â–‘â–ˆâ–ˆ  â–‘â–ˆâ–ˆ â–‘â–ˆâ–ˆ â–‘â–ˆâ–ˆ  â–‘â–‘â–ˆâ–ˆâ–ˆ
# â–‘â–‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆ â–‘â–ˆâ–ˆâ–ˆâ–ˆ  â–‘â–ˆâ–ˆ  â–‘â–ˆâ–ˆ â–‘â–ˆâ–ˆ â–‘â–ˆâ–ˆ   â–‘â–ˆâ–ˆ
#  â–‘â–‘â–‘â–‘â–‘â–ˆâ–ˆâ–‘â–ˆâ–ˆâ–‘â–ˆâ–ˆ â–‘â–ˆâ–ˆ  â–‘â–ˆâ–ˆ â–‘â–ˆâ–ˆ â–‘â–ˆâ–ˆ   â–ˆâ–ˆ
#  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ â–‘â–ˆâ–ˆâ–‘â–‘â–ˆâ–ˆâ–‘â–‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ â–ˆâ–ˆâ–ˆ â–ˆâ–ˆâ–ˆ  â–ˆâ–ˆ
# â–‘â–‘â–‘â–‘â–‘â–‘  â–‘â–‘  â–‘â–‘  â–‘â–‘â–‘â–‘â–‘â–‘ â–‘â–‘â–‘ â–‘â–‘â–‘  â–‘â–‘
#
# ANSI color scheme script by pyratebeard
# original `slendy` script by xero
#
initializeANSI()
{
  esc=""

  blackf="${esc}[30m";   redf="${esc}[31m";    greenf="${esc}[32m"
  yellowf="${esc}[33m"   bluef="${esc}[34m";   purplef="${esc}[35m"
  cyanf="${esc}[36m";    whitef="${esc}[37m"

  blackb="${esc}[40m";   redb="${esc}[41m";    greenb="${esc}[42m"
  yellowb="${esc}[43m"   blueb="${esc}[44m";   purpleb="${esc}[45m"
  cyanb="${esc}[46m";    whiteb="${esc}[47m"

  boldon="${esc}[1m";    boldoff="${esc}[22m"
  italicson="${esc}[3m"; italicsoff="${esc}[23m"
  ulon="${esc}[4m";      uloff="${esc}[24m"
  invon="${esc}[7m";     invoff="${esc}[27m"

  reset="${esc}[0m"
}

initializeANSI

cat << EOF

$redf  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„  $greenf  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„  $yellowf  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„  $bluef  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„  $purplef  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„  $cyanf  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„
$redf â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„ $greenf â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„ $yellowf â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„ $bluef â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„ $purplef â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„ $cyanf â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„
$redf â–ˆâ–ˆ${boldon}${redb}â–ˆâ–ˆ${reset}${redf}â–ˆ${boldon}${redb}â–ˆâ–ˆ${reset}${redf}â–ˆâ–ˆ $greenf â–ˆâ–ˆ${boldon}${greenb}â–ˆâ–ˆ${reset}${greenf}â–ˆ${boldon}${greenb}â–ˆâ–ˆ${reset}${greenf}â–ˆâ–ˆ $yellowf â–ˆâ–ˆ${boldon}${yellowb}â–ˆâ–ˆ${reset}${yellowf}â–ˆ${boldon}${yellowb}â–ˆâ–ˆ${reset}${yellowf}â–ˆâ–ˆ $bluef â–ˆâ–ˆ${boldon}${blueb}â–ˆâ–ˆ${reset}${bluef}â–ˆ${boldon}${blueb}â–ˆâ–ˆ${reset}${bluef}â–ˆâ–ˆ $purplef â–ˆâ–ˆ${boldon}${purpleb}â–ˆâ–ˆ${reset}${purplef}â–ˆ${boldon}${purpleb}â–ˆâ–ˆ${reset}${purplef}â–ˆâ–ˆ $cyanf â–ˆâ–ˆ${boldon}${cyanb}â–ˆâ–ˆ${reset}${cyanf}â–ˆ${boldon}${cyanb}â–ˆâ–ˆ${reset}${cyanf}â–ˆâ–ˆ
$redf  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ  $greenf  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ  $yellowf  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ  $bluef  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ  $purplef  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ  $cyanf  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ
$redf   â–ˆ${boldon}${redb}â–ˆ${reset}${redf}â–ˆ${boldon}${redb}â–ˆ${reset}${redf}â–ˆ   $greenf   â–ˆ${boldon}${greenb}â–ˆ${reset}${greenf}â–ˆ${boldon}${greenb}â–ˆ${reset}${greenf}â–ˆ   $yellowf   â–ˆ${boldon}${yellowb}â–ˆ${reset}${yellowf}â–ˆ${boldon}${yellowb}â–ˆ${reset}${yellowf}â–ˆ   $bluef   â–ˆ${boldon}${blueb}â–ˆ${reset}${bluef}â–ˆ${boldon}${blueb}â–ˆ${reset}${bluef}â–ˆ   $purplef   â–ˆ${boldon}${purpleb}â–ˆ${reset}${purplef}â–ˆ${boldon}${purpleb}â–ˆ${reset}${purplef}â–ˆ   $cyanf   â–ˆ${boldon}${cyanb}â–ˆ${reset}${cyanf}â–ˆ${boldon}${cyanb}â–ˆ${reset}${cyanf}â–ˆ
$reset
EOF
